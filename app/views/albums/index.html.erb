<p id="notice"><%= notice %></p>

<h1>相册列表</h1>

<%= link_to '创建新相册', new_user_album_path(@user) %>

<table>
  <thead>
    <tr>
      <th colspan="1">id</th>
      <th colspan="1">name</th>
      <th colspan="1">desc</th>
      <th colspan="3">actions</th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.id %></td>
        <td><%= album.name %></td>
        <td><%= album.desc %></td>

        <td><%= link_to '详情', album %></td>
        <td><%= link_to '编辑', edit_album_path(album) %></td>
        <td><%= link_to '删除', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
