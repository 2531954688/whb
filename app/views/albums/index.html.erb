<p id="notice"><%= notice %></p>

<ul class="my-album">
  <% @albums.each do |album| %>
    <li>
      <div class="time-circle">
        <p class="album-date">07-23</p>
        <p class="album-year">2015</p>
      </div>

      <div class="right-content">
        <h7>用户自定义的标题</h7>
        <div class="photo-container">
          <img class="photo-cover" src="http://placehold.it/350x350">
        </div>
        <div class="album-desc">
          相册浏览量:10次<br/>转发:0次,分享:0次
        </div>
        <div class="album-manage">
          <a href="#" class="edit-album button info tiny">编辑</a>
          <a href="#" class="delete-album button info tiny">删除</a>
        </div>
      </div>
    </li>
  <% end %>
</ul>
