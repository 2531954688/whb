<div id="fullpage" class="text-center">
  <% @album.images.each do |image| %>
    <% src =  image.src.blank? ? image.pic_url : image.src %>
    <div class="section"><img src="<%= src %>"></div>
  <% end %>
</div>

<div class="album arrow-wrapper animated fadeOutUp">
  <p class="arrow"></p>
</div>

<div class="album menus">
  <div class="menu">
    <a id="tpl" href="#" class="btn" data-title="更换模板">模板</a>
  </div>
  <div class="menu">
    <a id="music" href="#" class="btn" data-title="更换音乐">音乐</a>
  </div>
  <div class="menu">
    <a id="pics" href="#" class="btn" data-title="管理相册">相册</a>
  </div>
  <div class="menu">
    <a id="title" href="#" class="btn" data-title="修改标题">标题</a>
  </div>
</div>

<div class="select-layer">
  <div class="title-bar">
    <h3 class="title"></h3>
    <span class="cancel">X</span>
  </div>
  <div class="listWrapper">
    <div class="tpl hide">
      <h1>模板</h1>
    </div>
    <div class="music hide">
      <% @songs.each_with_index do |song, i| %>
        <div class="row" data-song-id="<%= song.id %>" data-song-src="<%= song.src %>">
          <div class="small-12 columns">
            <%= "#{i} #{song.singer} #{song.name}" %>
            <div class="indicator"></div>
            <a href="#" class="button tiny pick">使用</a>
          </div>
        </div>
      <% end %>
    </div>
    <div class="pics hide">
      <h1>相册</h1>
    </div>
    <div class="title hide">
      <h1>标题</h1>
    </div>
  </div>
</div>

<div class="music-icon"></div>

<audio>
  <source src="<%= @album.song.src %>" />
</audio>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', user_albums_path(@album.user) %>
