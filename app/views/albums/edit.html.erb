<div id="fullpage" class="text-center">
  <% @album.images.each do |image| %>
    <% src =  image.src.blank? ? image.pic_url : image.src %>
    <div class="section"><img src="<%= src %>"></div>
  <% end %>
</div>

<div class="album arrow-wrapper animated fadeOutUp">
  <p class="arrow"></p>
</div>

<div class="album menus">
  <div class="menu">
    <a id="tpl" href="#" class="btn">模板</a>
  </div>
  <div class="menu">
    <a id="music" href="#" class="btn">音乐</a>
  </div>
  <div class="menu">
    <a id="pics" href="#" class="btn">相册</a>
  </div>
  <div class="menu">
    <a id="title" href="#" class="btn">标题</a>
  </div>
</div>

<div class="select-layer">
  <div class="title-bar">
    <h2 class="title"></h2>
    <span class="cancel">X</span>
  </div>
  <div class="listWrapper">
    <div class="tpl hide">
      <h2>模板</h2>
    </div>
    <div class="music hide">
      <% @songs.each_with_index do |song, i| %>
        <div class="row">
          <div class="small-1 columns"><%= i %><input type="hidden" value=<%= song.src %> /></div>
          <div class="small-9 columns"><%= "#{song.singer} #{song.name}" %></div>
          <div class="small-2 columns">
            <div class="indicator">
            </div>
          </div>
        </div>
        <hr/>
      <% end %>
    </div>
    <div class="pics hide">
      <ul class="th clearing-thumbs small-block-grid-3" data-clearing>
        <li>
          <div class="delPhotos">
            <img src="http://placehold.it/100x100">
              <a class="delPhoto" href="#">&nbsp;X</a>
          </div>
        </li>
        <li><div class="delPhotos"><img src="http://placehold.it/350x150"><a class="delPhoto" href="javascript:;">X</a></div></li>
        <li><div class="delPhotos"><img src="http://placehold.it/350x150"><a class="delPhoto" href="javascript:;">X</a></div></li>
        <li><div class="delPhotos"><img src="http://placehold.it/100x100"><a class="delPhoto" href="javascript:;">X</a></div></li>
        <li><div class="delPhotos"><img src="http://placehold.it/150x150"><a class="delPhoto" href="javascript:;">X</a></div></li>
        <li><div class="delPhotos"><img src="http://placehold.it/200x150"><a class="delPhoto" href="javascript:;">X</a></div></li>
        <li><div class="delPhotos"><img src="http://placehold.it/150x150"><a class="delPhoto" href="javascript:;">X</a></div></li>
        <li><div class="delPhotos"><img src="http://placehold.it/250x150"><a class="delPhoto" href="javascript:;">X</a></div></li>
        <li><div class="delPhotos"><img src="http://placehold.it/200x150"><a class="delPhoto" href="javascript:;">X</a></div></li>
        <li><div class="delPhotos"><img src="http://placehold.it/100x150"><a class="delPhoto" href="javascript:;">X</a></div></li>
        <li><div class="delPhotos"><img src="http://placehold.it/200x150"><a class="delPhoto" href="javascript:;">X</a></div></li>
        <li><div class="delPhotos"><img src="http://placehold.it/300x150"><a class="delPhoto" href="javascript:;">X</a></div></li>
      </ul>
    </div>
    <div class="title hide">
      <textarea class="albumTitle large columns" area-invalid="false">itle</textarea>
      <button type="submit" class="modifyTitle medium button info small">submit</button>
      <button type="reset" class="resetTitle medium button info small">reset</button>
    </div>
  </div>
</div>

<div class="music-icon"></div>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', user_albums_path(@album.user) %>
