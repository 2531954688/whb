<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="small-12 columns">
      <label>does user subscribed?</label>
        <%= f.check_box :subscribe %>
        <%= label_tag(:user_subscribe, "Yes") %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label>openid
        <%= f.text_field :openid %>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label>nickname
        <%= f.text_field :nickname %>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
        <label>choose your sex </label>
        <%= f.radio_button :sex, "1" %>
        <%= label_tag(:user_sex_1, "male") %>
        <%= f.radio_button :sex, "2" %>
        <%= label_tag(:user_sex_2, "female") %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label>language
        <%= f.text_field :language %>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label>city
        <%= f.text_field :city %>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label>province
        <%= f.text_field :province %>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label>country
        <%= f.text_field :country %>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label>headimgurl
