    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label>subscribe_time
        <%= f.text_field :subscribe_time %>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label>unionid
        <%= f.text_field :unionid %>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <label>remark
        <%= f.text_field :remark %>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>
