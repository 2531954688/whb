<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<table>
  <thead>
    <tr>
      <th colspan="1">id</th>
      <th colspan="1">name</th>
      <th colspan="1">desc</th>
      <th colspan="1">src</th>
      <th colspan="1">singer</th>
      <th colspan="1">collection</th>
      <th colspan="1">duration</th>
      <th colspan="3">actions</th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.id %></td>
        <td><%= song.name %></td>
        <td><%= song.desc %></td>
        <td><%= song.src %></td>
        <td><%= song.singer %></td>
        <td><%= song.collection %></td>

        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

